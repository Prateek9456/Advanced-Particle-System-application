<Window x:Class="ParticleSystemApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Particle System - Water, Smoke and Sparks" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Top Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#1A1A1A" Margin="0,0,0,5">
            <Label Content="Particle System:" Foreground="White" VerticalAlignment="Center" Margin="10,5"/>
            
            <!-- Water Particles -->
            <Button Name="WaterButton" Content="💧 Water" 
                    Width="100" Height="40" Margin="5" 
                    Background="#3498DB" Foreground="White" FontWeight="Bold"
                    Click="WaterButton_Click"/>
            
            <!-- Smoke Particles -->
            <Button Name="SmokeButton" Content="💨 Smoke" 
                    Width="100" Height="40" Margin="5"
                    Background="#7F8C8D" Foreground="White" FontWeight="Bold"
                    Click="SmokeButton_Click"/>
            
            <!-- Spark Particles -->
            <Button Name="SparksButton" Content="✨ Sparks" 
                    Width="100" Height="40" Margin="5"
                    Background="#F39C12" Foreground="White" FontWeight="Bold"
                    Click="SparksButton_Click"/>
            
            <Separator Margin="10,5" Background="#444"/>
            
            <!-- Controls -->
            <Label Content="Intensity:" Foreground="White" VerticalAlignment="Center" Margin="10,5,5,5"/>
            <Slider Name="IntensitySlider" 
                    Width="120" Height="20" 
                    Minimum="10" Maximum="200" Value="50"
                    VerticalAlignment="Center" Margin="5"/>
            
            <Label Content="Size:" Foreground="White" VerticalAlignment="Center" Margin="20,5,5,5"/>
            <Slider Name="SizeSlider" 
                    Width="100" Height="20" 
                    Minimum="1" Maximum="10" Value="3"
                    VerticalAlignment="Center" Margin="5"/>
            
            <!-- Control Buttons -->
            <Button Name="PlayPauseButton" Content="⏸️ Pause" 
                    Width="80" Height="40" Margin="20,5,5,5"
                    Background="#27AE60" Foreground="White"
                    Click="PlayPauseButton_Click"/>
            
            <Button Name="ClearButton" Content="🗑️ Clear" 
                    Width="80" Height="40" Margin="5"
                    Background="#E74C3C" Foreground="White"
                    Click="ClearButton_Click"/>
        </StackPanel>
        
        <!-- Particle Canvas -->
        <Border Grid.Row="1" Background="Black" BorderBrush="#333" BorderThickness="2" Margin="5">
            <Canvas Name="ParticleCanvas" 
                    Background="Black"
                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                    MouseMove="Canvas_MouseMove"
                    MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                    MouseRightButtonDown="Canvas_MouseRightButtonDown"/>
        </Border>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#2C3E50" Height="30">
            <StatusBarItem>
                <TextBlock Name="StatusText" Foreground="White" Text="Ready - Left click to emit particles, Right click for burst effect"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="White" Text="Active Particles: "/>
                    <TextBlock Name="ParticleCountText" Foreground="#3498DB" Text="0"/>
                    <TextBlock Foreground="White" Text=" | FPS: " Margin="20,0,0,0"/>
                    <TextBlock Name="FpsText" Foreground="#27AE60" Text="60"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>